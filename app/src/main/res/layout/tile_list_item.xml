<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp" >
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/ivShape"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Yep:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivShape"
        android:layout_alignStart="@+id/ivShape"
        android:id="@+id/tvYesLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvYesLabel"
        android:layout_toEndOf="@+id/tvYesLabel"
        android:id="@+id/tvYes"
        tools:text="12"
        android:paddingLeft="4dp" />

    <TextView
        android:text="Nope:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvYes"
        android:layout_toEndOf="@+id/tvYes"
        android:id="@+id/tvNoLabel"
        android:paddingLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvNoLabel"
        android:layout_toEndOf="@+id/tvNoLabel"
        android:id="@+id/tvNo"
        tools:text="8"
        android:paddingLeft="4dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>