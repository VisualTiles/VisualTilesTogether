<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/state_list_tile_selector_card">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_up_enabled"
            android:id="@+id/ibUpVote"
            style="?android:attr/borderlessButtonStyle"
            android:visibility="gone"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_down_enabled"
            android:id="@+id/ibDownVote"
            style="?android:attr/borderlessButtonStyle"
            android:visibility="gone" />

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:theme="?attr/actionBarTheme"
            android:layout_marginTop="8dp"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/tbTileListItem"
            android:layout_below="@+id/ivShape"
            android:layout_alignParentStart="true"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/ivShape"
            android:layout_marginTop="8dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivShape"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:id="@+id/tvVotesTotal"
                tools:text="222"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </RelativeLayout>
</android.support.v7.widget.CardView>