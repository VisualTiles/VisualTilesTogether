<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.javierarboleda.visualtilestogether">
    <application
        android:name=".VisualTilesTogetherApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.TileListActivity" />
        <activity android:name=".activities.SignInActivity"
            android:launchMode="singleTop" android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.PresentationActivity"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenAppTheme">
        </activity>
        <activity android:name=".activities.MainActivity"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".activities.CreateGroupActivity"
                  android:icon="@mipmap/ic_launcher"
                  android:label="@string/app_name"
                  android:allowBackup="true"
                  android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.TileCreationActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.CreateJoinActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
